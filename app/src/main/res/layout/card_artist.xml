<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="artist_model"
            type="com.clicagency.lastfmapp.data.remote.models.artists.artistsResponse.Artist" />
    </data>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_artist"
        android:theme="@style/LastFmCard"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_artist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d15"
                android:scaleType="centerCrop"
                app:imgUrlz="@{artist_model.imageUrl}"
                />
            <TextView
                android:id="@+id/tv_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{artist_model.name}"
                android:layout_marginTop="@dimen/d0_8"
                android:layout_marginStart="@dimen/d0_8"
                android:textStyle="bold"
                android:textColor="@color/primaryBlack"
                />
            <TextView
                android:id="@+id/tv_artist_listener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,779,916 listeners"
                android:layout_marginStart="@dimen/d0_8"
                android:textSize="@dimen/very_small_text"
                android:layout_marginTop="@dimen/d0_6"
                android:padding="@dimen/d0_1"
                android:textColor="@color/primaryGray"
                />
            <TextView
                android:id="@+id/tv_artist_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/d0_8"
                android:layout_marginEnd="@dimen/d0_8"
                android:visibility="gone"
                android:text="The Red Hot Chili Peppers are a funk rock band based in Hollywood, California and were formed in 1983, in Los Angeles, California. The bandâ€¦"
                android:textSize="@dimen/very_small_text"
                android:layout_marginTop="@dimen/d0_6"
                android:padding="@dimen/d0_2"
                android:textColor="@color/primaryBlack"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
